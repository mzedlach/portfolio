{
  "name": "marialach",
  "version": "1.0.0",
  "description": "Portfolio for Maria Lach. ",
  "main": "index.js",
  "scripts": {
    "sassitup": "node-sass main.scss styles.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver sassitup",
    
    "compile:css": "node-sass sass/main.scss resources/css/styles.css",
    "concat:css": "concat -o css/style.concat.css css/styles.css otherfiles",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefixes.css",
    "compress:css": "node-sass css/style.prefixes.css css/style.css --output-style  compressed",
    "build:css": "npm-run-all compile:css concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mzedlach/portfolio.git"
  },
  "author": "Maria Lach",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mzedlach/portfolio/issues"
  },
  "homepage": "https://github.com/mzedlach/portfolio#readme",
  "devDependencies": {
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3"
  }
}
